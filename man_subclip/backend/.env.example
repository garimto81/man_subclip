# Backend Environment Variables
# Copy this file to .env and update with your actual values
# DO NOT commit .env to git

# Application
APP_NAME=Video Proxy & Subclip Platform
APP_VERSION=0.1.0
DEBUG=True
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://video_user:video_password@localhost:5432/video_platform

# NAS Storage Paths
NAS_ORIGINALS_PATH=/nas/originals
NAS_PROXY_PATH=/nas/proxy
NAS_CLIPS_PATH=/nas/clips

# ffmpeg Configuration
FFMPEG_PATH=ffmpeg
FFMPEG_THREADS=4
FFMPEG_PRESET=fast
FFMPEG_CRF=23

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000

# Optional: Task Queue (for future optimization)
TASK_QUEUE=fastapi
