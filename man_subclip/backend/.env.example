# Application
APP_NAME=Video Proxy & Subclip Platform
APP_VERSION=0.1.0
DEBUG=True

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/video_archive

# NAS Storage
NAS_ORIGINAL_PATH=/nas/original
NAS_PROXY_PATH=/nas/proxy
NAS_CLIPS_PATH=/nas/clips

# ffmpeg
FFMPEG_PATH=ffmpeg
FFMPEG_THREADS=4
FFMPEG_PRESET=fast
FFMPEG_CRF=23

# Task Queue
TASK_QUEUE=fastapi
CELERY_BROKER_URL=redis://localhost:6379/0

# API
CORS_ORIGINS=["http://localhost:3000"]
